@{
ViewData["Title"] = "Edit Book";
}

<partial name="NavbarPartial"></partial>

<br>

<div class="mx-auto"
    style="width: 35%; text-align: center; color: darkgray; font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif">
    <h3>Edit Book</h3>
</div>

<br>

<div class="mx-auto" style="width: 35%">
    <form action="../UpdateBook/@ViewBag.TheBook.BookID" method="post">
        <div class="form-group">
            <div class="row">
                <div class="col-xs-12">
                    <h6>Title: <span style="font-weight: normal">@ViewBag.TheBook.Title</span></h6>
                    <input type="hidden" class="form-control" name="Title"
                        value="@ViewBag.TheBook.Title" required="required">
                </div>
            </div>
            <br>
            <div class="row">
                <div class="col-xs-12">
                    <h6>Author: <span style="font-weight: normal">@ViewBag.TheBook.Author</span></h6>
                    <input type="hidden" class="form-control" name="Author"
                        value="@ViewBag.TheBook.Author" required="required">
                </div>
            </div>
            <br>
            <div class="row">
                <div class="col-xs-12">
                    <h6>Genre: <span style="font-weight: normal">@ViewBag.TheBook.Genre</span></h6>
                    <input type="hidden" class="form-control" name="Genre"
                        value="@ViewBag.TheBook.Genre" required="required">
                </div>
            </div>
            <br>
            <div class="row">
                <div class="col-xs-12">
                    <h6>Description:</h6>
                    <textarea type="text" class="form-control" name="Description"
                        placeholder="@ViewBag.TheBook.Description" required="required"></textarea>
                </div>
            </div>
            <br>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success btn-lg btn-block">Edit</button>
        </div>
    </form>
</div>