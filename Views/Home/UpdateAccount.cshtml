@using Lybrary.Models
@model Reader

@{
ViewData["Title"] = "Update Your Account";
}

<partial name="NavbarPartial">

    <div class="mx-auto" style="width: 45%">

        <br>

        <div class="card" style="text-align: center">
            <a class="updateCard" href="../Update/Name" style="color: black">
                <div class="card-body">
                    <h5 class="card-title">Update Your Name</h5>
                    <h6 class="card-subtitle mb-2 text-muted">@ViewBag.ReaderInSession.FirstName
                        @ViewBag.ReaderInSession.LastName</h6>
                </div>
            </a>
        </div>

        <hr>

        <div class="card" style="text-align: center">
            <a class="updateCard" href="../Update/Email" style="color: black">
                <div class="card-body">
                    <h5 class="card-title">Update Your Email Address</h5>
                    <h6 class="card-subtitle mb-2 text-muted">@ViewBag.ReaderInSession.Email</h6>
                </div>
            </a>
        </div>

        <hr>

        <div class="card" style="text-align: center">
            <a class="updateCard" href="../Update/Password" style="color: black">
                <div class="card-body">
                    <h5 class="card-title">Update Your Password</h5>
                </div>
            </a>
        </div>

    </div>